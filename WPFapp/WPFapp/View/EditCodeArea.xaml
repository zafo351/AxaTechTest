<Window x:Class="WPFapp.View.EditCodeArea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp.View"
        mc:Ignorable="d"
        Title="EditCodeArea" Height="200" Width="200"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="txbIdUser" Text="{Binding IdUser}"></TextBlock>
            <TextBlock x:Name="txbFirstName" Text="{Binding FirstName}"></TextBlock>
            <TextBlock x:Name="txbLastName" Margin="0 0 0 20" Text="{Binding LastName}"></TextBlock>

            <Label Content="Enter Area Code:"/>
            <TextBox x:Name="TextBoxIdArea" Text="{Binding IdArea}"/>
            <Button Content="Guardar" Click="OnSaveButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
